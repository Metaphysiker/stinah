<div class="container">
  <div class="jumbotron bg-white my-4">
    <div class="text-center">
      <%= image_tag("stinah-logo.png", class: "img-fluid mb-4") %>
      <h1 class="my-4 text-darker-base-color">Herzlich Willkommen</h1>
      <p class="lead text-darker-base-color my-4">Hier finden Sie Informationen über die Stiftung, ihre Zielsetzung und ihr Engagement.</p>
      <p class="lead text-darker-base-color my-4">Für Ihr Interesse und Ihren Einsatz zugunsten der Tiere danken wir Ihnen herzlich!</p>
    </div>
    <div class="row">
      <div class="col-2 d-flex align-items-center justify-content-center">
        <button type="button" class="carousel-prev btn btn-secondary btn-lg"> &#8249; </button>
      </div>
      <div class="col-8">
        <div id="carouselExampleControls" class="carousel slide mx-auto" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="https://loremflickr.com/600/300/animal?random=#1" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://loremflickr.com/600/300/animal?random=#2" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://loremflickr.com/400/200/animal?random=#3" class="d-block w-100" alt="...">
            </div>
          </div>
        </div>
      </div>
      <div class="col-2 d-flex align-items-center justify-content-center">
          <button type="button" class="carousel-next btn btn-secondary btn-lg"> &#8250; </button>
      </div>
  </div>
</div>

  <div class="jumbotron bg-white my-4">
    <% if is_current_user_admin? %>
      <div class="text-center">
        <%= link_to 'Neuer Eintrag', new_post_path, class: "btn btn-primary" %>
      </div><hr />
    <% end %>
    <h1 class="text-center text-darker-base-color">Neuigkeiten</h1>
    <%= render partial: "posts/show", collection: @posts, as: :post %>
  </div>

</div>

<script>
  $( document ).ready(function() {

    $( ".carousel-prev" ).click(function() {
      $('.carousel').carousel('prev');
    });

    $( ".carousel-next" ).click(function() {
      $('.carousel').carousel('next');
    });

    $('.carousel').carousel({
      interval: 3000
    });
  });
</script>
