<%# user_id = current_user.nil? ? 0 : current_user.id %>

<%= simple_form_for sponsorship, url: add_sponsorship_path, method: :post do |f| %>
  <%#= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :animal_id, value: animal.id %>
  <%= f.label :donation, "Meine monatliche Spende an #{animal.name}: " %>
  <%= f.input :donation, label: false, input_html: {value: '200'} %>
  <div class="alert alert-info">
    Leider können wir keine Spenden unter 30 Franken pro Monat annehmen,
    da der administrative Aufwand für kleine Spenden zu gross ist.
  </div>
  <p>
    Name
  </p>
  <div class="row">
    <div class="col-6">
      <%= f.input :firstname, label: false, placeholder: "Vorname", required: true %>
    </div>
    <div class="col-6">
      <%= f.input :lastname, label: false, placeholder: "Nachname", required: true %>
    </div>
  </div>
  <%= f.input :email, placeholder: "beispiel@gmail.com" %>
  <%= f.input :public, label: " Ich möchte namentlich als Pate für #{animal.name} erwähnt werden." %>
  <%#= label :q, "Laaabel" %>
  <%#= text_field_tag :q, nil, class: 'form-control' %>
  <br />
  <%= f.button :submit, class: "btn btn-success" %>
<% end %>
