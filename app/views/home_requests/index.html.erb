<div class="container">
  <div class="jumbotron bg-white my-4">
      <h3><%= HomeRequest.model_name.human %></h3>
      <br />
    <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>
          ID
        </th>
        <th>Eigentümer / Melder</th>
        <th>
          Erstellt
        </th>
        <th>
          Matches
        </th>
      </tr>
    </thead>
    <tbody>
      <% @home_requests.each do |home_request| %>
        <tr>
          <td>
            <%= link_to home_request.id, home_request_path(home_request) %>
          </td>
          <td>
            <%= link_to home_request.messenger_or_owner, home_request_path(home_request) %>
          </td>
          <td><%= link_to "#{l(home_request.created_at)}", home_request_path(home_request) %></td>
          <td>
            <%= render "home_requests/matches", home_request: home_request %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
    <%#= render partial: "home_requests/show", collection: @home_requests, as: :home_request %>
    <br />
    <% if @archived == "true" %>
      <%= link_to "Nicht-archivierte Einträge anzeigen", home_requests_path(archived: false), class: "btn btn-primary m-2" %>
    <% else %>
      <%= link_to "Archivierte Einträge anzeigen", home_requests_path(archived: true), class: "btn btn-primary m-2" %>
    <% end %>
  </div>
</div>
