var records_div = ".home_offers";

$( records_div ).fadeOut( "fast", function() {

    content = $("<%= escape_javascript( render 'home_offers', home_offers: @home_offers, search_term: @search_inputs[:search_term] ) %>")

    $(records_div).fadeOut("fast", function(){
      $(records_div).empty().append(content).fadeIn("fast");
    });

});
