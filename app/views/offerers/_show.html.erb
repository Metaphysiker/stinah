<div class="card my-3 <%= dom_id(offerer) %>">
  <div class="card-body">
    <h4>Tier-Aufnahme</h4>

    <hr />
    <div class="text-justify">
      <h4>Angaben zur Person</h4>
      <hr />
      <p>
        <%= offerer.name %>
        <br />
        <%= offerer.street %>
        <br />
        <%= offerer.city %> <%= offerer.plz %>
        <br />
        <%= offerer.phone %>
        <br />
        <%= mail_to offerer.email %>
      </p>
      <hr />
      <h4>Angaben zur Erfahrung und Motivation</h4>
      <hr />
      <p>
        <b><%= offerer.class.human_attribute_name("experience") %></b> <br />
        <%= offerer.experience %>
      </p>
      <p>
        <b><%= offerer.class.human_attribute_name("motivation") %></b> <br />
        <%= offerer.motivation %>
      </p>
      <p>
        <b><%= offerer.class.human_attribute_name("plans") %></b> <br />
        <%= offerer.plans %>
      </p>
    </div>

    <%= offerer.home_offers.count %>
    <% offerer.home_offers.each do |home_offer| %>
      <%= home_offer.species %>
    <% end %>
  </div>
</div>

<div class="jumbotron bg-white">
  <%= render 'home_offers/form_for_offerer', home_offer: HomeOffer.new, offerer: offerer %>
</div>
