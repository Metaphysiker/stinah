<p id="notice"><%= notice %></p>

<h1>Offerers</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Street</th>
      <th>City</th>
      <th>Plz</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Year</th>
      <th>Experience</th>
      <th>Motivation</th>
      <th>Plans</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offerers.each do |offerer| %>
      <tr>
        <td><%= offerer.firstname %></td>
        <td><%= offerer.lastname %></td>
        <td><%= offerer.street %></td>
        <td><%= offerer.city %></td>
        <td><%= offerer.plz %></td>
        <td><%= offerer.phone %></td>
        <td><%= offerer.email %></td>
        <td><%= offerer.year %></td>
        <td><%= offerer.experience %></td>
        <td><%= offerer.motivation %></td>
        <td><%= offerer.plans %></td>
        <td><%= link_to 'Show', offerer %></td>
        <td><%= link_to 'Edit', edit_offerer_path(offerer) %></td>
        <td><%= link_to 'Destroy', offerer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

