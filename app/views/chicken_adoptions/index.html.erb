<p id="notice"><%= notice %></p>

<h1>Chicken Adoptions</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Street</th>
      <th>Plz</th>
      <th>City</th>
      <th>Phone</th>
      <th>Number of chickens for adoption</th>
      <th>Number of chickens currently</th>
      <th>Description of home</th>
      <th>Size of chicken coop</th>
      <th>Size of outdoor area</th>
      <th>Adoption of a rooster possible</th>
      <th>Acceptance statement</th>
      <th>Privacy statement</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chicken_adoptions.each do |chicken_adoption| %>
      <tr>
        <td><%= chicken_adoption.firstname %></td>
        <td><%= chicken_adoption.lastname %></td>
        <td><%= chicken_adoption.street %></td>
        <td><%= chicken_adoption.plz %></td>
        <td><%= chicken_adoption.city %></td>
        <td><%= chicken_adoption.phone %></td>
        <td><%= chicken_adoption.number_of_chickens_for_adoption %></td>
        <td><%= chicken_adoption.number_of_chickens_currently %></td>
        <td><%= chicken_adoption.description_of_home %></td>
        <td><%= chicken_adoption.size_of_chicken_coop %></td>
        <td><%= chicken_adoption.size_of_outdoor_area %></td>
        <td><%= chicken_adoption.adoption_of_a_rooster_possible %></td>
        <td><%= chicken_adoption.acceptance_statement %></td>
        <td><%= chicken_adoption.privacy_statement %></td>
        <td><%= chicken_adoption.message %></td>
        <td><%= link_to 'Show', chicken_adoption %></td>
        <td><%= link_to 'Edit', edit_chicken_adoption_path(chicken_adoption) %></td>
        <td><%= link_to 'Destroy', chicken_adoption, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

