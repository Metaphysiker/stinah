var records_div = ".chicken_adoptions";

$( records_div ).fadeOut( "fast", function() {

    content = $("<%= escape_javascript( render 'chicken_adoptions', chicken_adoptions: @chicken_adoptions, search_term: @search_inputs[:search_term] ) %>")

    $(records_div).fadeOut("fast", function(){
      $(records_div).empty().append(content).fadeIn("fast");
    });

});
