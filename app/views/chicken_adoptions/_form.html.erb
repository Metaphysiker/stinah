
<%= simple_form_for(chicken_adoption) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :street %>
    <%= f.input :plz %>
    <%= f.input :city %>
    <%= f.input :phone %>
    <%= f.input :number_of_chickens_for_adoption %>
    <%= f.input :number_of_chickens_currently %>
    <%= f.input :description_of_home %>
    <%= f.input :size_of_chicken_coop %>
    <%= f.input :size_of_outdoor_area %>
    <%= f.input :adoption_of_a_rooster_possible %>
    <%= f.input :acceptance_statement %>
    <%= f.input :privacy_statement %>
    <%= f.input :message %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
