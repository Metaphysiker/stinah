<div class="card p-3 border-d-color rounded-0">
  <h5 class="card-title text-d-color spaced-letters"><%= fa_icon "calendar", class: "mr-2" %> <strong><%= l(event.start, format: "%d.%m.%y") %></strong></h5>
  <h5 class="card-title text-d-color spaced-letters"><strong><%= event.name.capitalize %></strong></h5>
  <p class="card-text"><%= event.description.to_plain_text.truncate(150) %></p>
  <p>
    <%= link_to event_path(event) do %>
      <button type="button" class="btn btn-d-color btn-sm spaced-letters text-nowrap">MEHR ERFAHREN <%= fa_icon "chevron-right", class: "ml-2" %></button>
    <% end %>
  </p>
</div>
