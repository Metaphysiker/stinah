      <%= flash_messages %>
    </div>
    <%= yield %>
    <%#= render 'shared/general_information' %>

    <%= render "static_pages/card_columns" %>

    <%= render "static_pages/patenschaft" %>

    <%= render "static_pages/info-cards" %>
    
    <%= render "layouts/footer" unless controller_name == "save_the_chicken" %>
    <%= render "layouts/second_footer" unless controller_name == "save_the_chicken" %>

    <%= render "layouts/footer_for_save_the_chicken" if controller_name == "save_the_chicken" %>
