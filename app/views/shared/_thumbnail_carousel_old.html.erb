  <!-- Generate random token -->
  <% random_id = SecureRandom.hex(10) %>

  <!--Carousel Wrapper-->
  <div id="<%= random_id %>" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel">
    <!--Slides-->
    <div class="carousel-inner" role="listbox">
      <% images.each_with_index do |image, i| %>
        <div class="carousel-item <%= "active" if i == 0 %>">
          <%= image_tag image, class: "d-block w-100" %>
        </div>
      <% end %>
    </div>
    <div class="carousel-outer">
      <ol class="carousel-indicators">
        <li data-target="#<%= random_id %>" data-slide-to="0" class="active"></li>
        <% (images.size-1).times do |i| %>
            <li data-target="#<%= random_id %>" data-slide-to="<%= i + 1 %>"></li>
        <% end %>
      </ol>
    </div>
    <!--/.Slides-->
    <!--Controls-->
    <a class="carousel-control-prev" href="#<%= random_id %>" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#<%= random_id %>" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    <!--/.Controls-->
  </div>
  <!--/.Carousel Wrapper-->
  <script>
    $( document ).ready(function() {

    });
  </script>
