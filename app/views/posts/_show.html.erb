<div class="card my-3">
  <img src="https://loremflickr.com/400/200/animal?random=#{post.id}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <div class="text-justify">
      <p class="card-text"><%= simple_format(post.content) %></p>
    </div>
    <hr />
    <p class="card-text"><small class="text-muted"><%= post.created_at.strftime("%d/%m/%Y") %></small></p>
  </div>
  <% if user_signed_in? %>
    <div class="text-center m-2">
      <%= link_to 'Eintrag bearbeiten', edit_post_path(post), class: "btn btn-primary m-2" %>
