<div class="card">
  <div class="row no-gutters">
    <div class="col-md-8">

      <%= image_tag post.cover, class: "card-img" %>
    </div>
    <div class="col-md-4  b-color">
      <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <p class="card-text"><%= post.content.to_plain_text.truncate(150) %></p>
        <p>
          <%= link_to post_path(post) do %>
            <button type="button" class="btn btn-primary btn-sm spaced-letters text-nowrap">MEHR ERFAHREN <%= fa_icon "chevron-right", class: "ml-2" %></button>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
